{
  "name": "Kerni Editor",
  "description": "The official website editor extension for Kerni",
  "version": "1.0.3",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["editor.html", "cursor.svg", "edit.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}